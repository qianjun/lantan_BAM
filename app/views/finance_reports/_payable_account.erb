<div>
  <div class="table_box_h">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
      <thead>
        <tr class="hbg">
          <td width="10%">名称</td>
          <td width="20%">单位属性</td>
          <td width="12%">消费日期</td>
          <td width="20%">订单编号</td>
          <td width="10%">金额</td>
          <td width="10%">上期余额</td>
          <td width="9%">当前余额</td>
          <td width="9%">操作</td>
        </tr>
      </thead>
      <tbody>
        <%unless @pay_orders[0].blank? %>
          <% @pay_orders[0].each do |k,v| %>
            <tr>
              <td rowspan ="<%= v.length %>"><%=@customers[k].name%></td>
              <td rowspan ="<%= v.length %>"><%=@customers[k].group_name.nil? ? "个人客户" : @customers[k].group_name %></td>
              <% t_v = v.length;v_first = v.shift  %>
              <td><%= v_first.time %></td>
              <td><%= v_first.code %></td>
              <td><%= v_first.p_price %></td>
              <td rowspan="<%= t_v %>"><%=@account[k].nil? ? "0.0" : @account[k].left_amt  %></td>
              <td rowspan="<%= t_v %>"><%=@account[k].nil? ? "0.0" : @account[k].balance  %></td>
              <td rowspan="<%= t_v %>"><a href="javascript:void(0)" onclick="">付款</a></td>
            </tr>
            <%v.each do |pay_order|%>
              <tr>
                <td><%= pay_order.time %></td>
                <td><%= pay_order.code %></td>
                <td><%= pay_order.p_price %></td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="table_box">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
      <thead>
        <tr class="hbg">
          <td width="10%">名称</td>
