<% if @tab.eql?("work_record_tab") %>
  <% if @cal_style.nil? || @cal_style.empty? || @cal_style.eql?("day") %>
    $("#work_record_tab").html('<%= escape_javascript(render :partial => '/staffs/work_record_tab') %>');
  <% end %>

  <% if @cal_style.eql?("week") || @cal_style.eql?("month") %>
    $("#work_record_tab").html('<%= escape_javascript(render :partial => '/staffs/work_record_week_month_tab') %>');
  <% end %>  
<% end %>

<% if @tab.eql?("month_score_tab") %>
  $("#month_score_tab").html('<%= escape_javascript(render :partial => '/staffs/month_score_tab') %>');
  $("#month_score_tab").prepend("<script>$('#month_score_table > tbody > tr:odd').addClass('tbg');</script>");
  $("#month_score_table").tablesorter({headers:{1: { sorter: false },2: { sorter: false },3: { sorter: false }}});
  $("#month_score_table").bind("sortEnd",function() {
        $("#month_score_table").find('tr').each(function(i){
            if(i%2==0){
                $(this).removeClass('tbg');
            }else{
                $(this).addClass('tbg');
            }
        })
    });
<% end %>

