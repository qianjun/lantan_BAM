<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table" id="work_record_table">
  <thead>
    <tr class="hbg">
      <th><span class="sort_u_s" onclick="sort_change(this)">时间</span></th>
      <th>出勤</th>
      <th>迟到</th>
      <th>早退</th>
      <th>请假</th>
      <th>矿工</th>
      <th>投诉</th>
      <th>培训</th>
      <th>奖励</th>
      <th>扣款</th>
    </tr>
  </thead>
  <tbody>
    <% @work_records.each do |k,work_record| %>
      <tr>
        <td><%= k %></td>
        <td><%= work_record[WorkRecord::ATTEND_TYPES[:ATTEND]] ||= 0 %></td>
        <td><%= work_record[WorkRecord::ATTEND_TYPES[:LATE]] ||= 0 %></td>
        <td><%= work_record[WorkRecord::ATTEND_TYPES[:EARLY]] ||= 0 %></td>
        <td><%= work_record[WorkRecord::ATTEND_TYPES[:LEAVE]] ||= 0 %></td>
        <td><%= work_record[WorkRecord::ATTEND_TYPES[:ABSENT]] ||= 0 %></td>
        <td><%= 0 %></td>
        <td><%= 0 %></td>
        <td><%= 0 %></td>
        <td><%=  0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>