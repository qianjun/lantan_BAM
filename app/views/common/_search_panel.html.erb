<div class="search">
  <div><%= label_tag "types","物料类型：" %><span id="select_types"><%= select(:material,:category_id,options_from_collection_for_select(@types, "id", "name"),{:prompt => "请选择"}) %></span></div>
  <div><%= label_tag "name","物料名称：" %><%= text_field_tag "name" %></div>
  <div><%= button_to_function "查询","submit_search_form(#{params[:store_id]},#{@type},this)", :class => "search_btn" %></div>
</div>
<fieldset class="popup_body_fieldset" id="search_result" style="display: none;">
  <legend class="popup_body_title">查询结果</legend>
  <div class="popup_body_result" id="search_material">
    <%= render :partial => "/common/search_material" %>
  </div>
</fieldset>