<% if permission?(:materials, :sup_dh_serch) %>
  <div class="search">
    <div><label>物流状态：</label>
      <select id="select_s_order">
        <option value="-1">全部</option>
        <option value="0">未发货</option>
        <option value="1">已发货</option>
        <option value="2">已收货</option>
        <option value="3">已入库</option>
      </select>
    </div>
    <div><label>付款状态：</label>
      <select id="s_pay_status">
        <option value="-1">全部</option>
        <option value="0">未付款</option>
        <option value="1">已付款</option>
      </select>
    </div>
    <div><label>时间：</label><input class="Wdate" readonly onclick="WdatePicker()" name="sup_start" type="text" id="date03"/> 到 <input class="Wdate" readonly onclick="WdatePicker()" name="sup_end" type="text" id="date04"/></div>
    <div><label>供应商：</label>
      <select id="select_supplier">
        <option value="0">全部</option>
        <% @suppliers.each do |s| %>
          <option value="<%= s.id %>"><%= s.name %></option>
        <% end %>
      </select>
    </div>
    <div><button onclick="search_supplier_order(<%= params[:store_id] %>)" class="search_btn">查询</button></div>
  </div>
<% end %>
<div id="page_supplier_orders">
  <%= render :partial => "materials/supplier_orders" %>
</div>