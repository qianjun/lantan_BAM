<div class="search">
  <div>
    <label>物料类别：</label>
    <select id="back_good_records_search_type">
      <option value="-1">全部</option>
      <% @types.each do |t| %>
      <option value="<%= t.id %>"><%= t.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <label>物料名称：</label>
    <input type="text" id="back_good_records_search_name" />
  </div>
  <div>
    <label>条形码：</label>
    <input type="text" id="back_good_records_search_code" />
  </div>
  <div>
    <label>供应商：</label>
    <select id="back_good_records_search_supp">
      <option value="0">全部</option>
      <% @suppliers.each do |s| %>
      <option value="<%= s.id %>"><%= s.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <button class="search_btn" onclick="back_good_records_button(<%= params[:store_id].to_i %>)" >查询</button>
  </div>
</div>
<div id="back_good_records_div">
  <%= render :partial => "back_materials_records" %>
</div>
