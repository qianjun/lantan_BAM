<%= javascript_include_tag "check_materials"%>
<div class="main">
  <div class="box">
    <div class="data_box">
      <div class="tab_head">
        <ul>
          <li class="hover" >库存盘点</li>
          <li onclick="window.location.href='/stores/<%=params[:store_id]%>/check_materials/check_record'">盘点记录</li>
          <li  onclick="window.location.href='/stores/<%=params[:store_id]%>/check_materials/file_list'">记录文件</li>
        </ul>
      </div>
      <div class="search">
        <div style="height:40px;">
          <label style="height:39px;line-height: 39px;">物料类别：</label>
          <select id="mat_type" style="height:40px;width:100px;">
            <option value="-1">全部</option>
            <% @types.each do |t| %>
              <option value="<%= t.id %>"><%= t.name %></option>
            <% end %>
          </select>
        </div>
        <div style="height:40px;">
          <label>盘点状态：</label>
          <select id="check_status" style="height:40px;width:100px;">
            <option value="-1">全部</option>
            <% Material::CHECK_STATUS.each do |k,v| %>
              <option value="<%= k%>"><%=v %></option>
            <% end %>
          </select>
        </div>
        <div style="height:40px;">
          <%= image_tag "ajax-loader.gif", :id => "spinner_user", :style => "display:none;" %>
          <button class="search_btn" id="check_btn"
                  onclick="search_check_materials(<%= @current_store.id %>,'#check_status;#mat_type','/check_materials')"  style="height:40px;line-height:40px;width:100px;font-size: 20px;">查 询</button>
        </div>
      </div>
      <div id="check_div">
        <%= render :partial=>"check_material" %>
      </div>
    </div>
  </div>
</div>